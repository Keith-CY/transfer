{
  "name": "transfer",
  "version": "1.0.0",
  "author": "Keith <keithwhisper@gmail.com>",
  "repository": "https://github.com/Keith-CY/transfer",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "start": "nodemon --config ./config/nodemon.json",
    "precommit": "lint-staged",
    "build": "tsc && cp -r ./src/public ./dist",
    "test:serve": "nodemon --config ./config/nodemon.test.json",
    "test": "jest",
    "debug": "nodemon test/debug.js"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "axios": "^0.18.0",
    "dotenv": "^5.0.1",
    "form-data": "^2.3.2",
    "koa": "^2.5.0",
    "koa-body": "^2.5.0",
    "koa-router": "^7.4.0",
    "log4js": "^2.5.3",
    "pg": "^7.4.1",
    "sequelize": "^4.37.6"
  },
  "devDependencies": {
    "@types/dotenv": "^4.0.3",
    "@types/form-data": "^2.2.1",
    "@types/jest": "^22.2.3",
    "@types/koa": "^2.0.45",
    "@types/koa-router": "^7.0.27",
    "@types/node": "^10.1.2",
    "@types/sequelize": "^4.27.18",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-typescript": "^0.11.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.4",
    "nodemon": "^1.17.3",
    "ts-jest": "^22.4.5",
    "ts-node": "^6.0.0",
    "typescript": "^2.8.3",
    "typescript-eslint-parser": "^15.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    }
  }
}
