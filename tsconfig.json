{
  "files": ["./src/index.ts"],
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "pretty": true,
    "strictNullChecks": true,
    "lib": ["esnext"],
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true
  },
  "exclude": ["node_modules", "dist"]
}
